{% extends 'base.html.twig' %}

{% block title %}Horaire et Tarifs | Judo Club D'Isbergues{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre de la page -->
        <h2 class="text-center mb-5" data-aos="fade-up" data-aos-duration="1000">Horaires et Tarifs</h2>

        <!-- Section Horaires des Cours -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-10" data-aos="fade-left" data-aos-duration="1000">
                <div class="card shadow-sm">
                    <div class="bg-primary text-white">
                        <h3 class="text-center mb-0">Horaires des Cours</h3>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Taiso</h4>
                        <ul class="list-unstyled">
                            <li><strong>Lundi :</strong> 19h30 - 20h30</li>
                        </ul>

                        <h4 class="card-title">Judo (Enfants)</h4>
                        <ul class="list-unstyled">
                            <li><strong>Mercredi :</strong> 18h30 - 19h30</li>
                            <li><strong>Vendredi :</strong> 18h30 - 19h30</li>
                        </ul>

                        <h4 class="card-title">Judo (Adultes)</h4>
                        <ul class="list-unstyled">
                            <li><strong>Mercredi :</strong> 19h45 - 21h00</li>
                            <li><strong>Vendredi :</strong> 20h30 - 21h30</li>
                        </ul>

                        <h4 class="card-title">Jujitsu</h4>
                        <ul class="list-unstyled">
                            <li><strong>Vendredi :</strong> 19h45 - 20h30</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Géolocalisation -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-10" data-aos="fade-right" data-aos-duration="1000">
                <div class="card shadow-sm">
                    <div class="bg-success text-white">
                        <h3 class="text-center mb-0">Adresse et Géolocalisation</h3>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Adresse :</h4>
                        <p><strong>Rue Jean Jaurès, 62330 Isbergues</strong></p>
                        <p><strong>Judo Club Isbergues</strong></p>
                        
                        <!-- Carte Google Maps -->
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://maps.app.goo.gl/zgo2n1moHqM7j3Es8" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
