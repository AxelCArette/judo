{% extends 'base.html.twig' %}

{% block title %}Profil de {{ prenom }}{% endblock %}

{% block body %}
<div class="profil-container container mt-4">
    <div class="row justify-content-center">
        <!-- Menu de mise à jour du profil à gauche -->
        <div class="col-12 col-md-4 d-flex flex-column" data-aos="fade-left" data-aos-duration="800" data-aos-delay="400">
            <div class="profil-update-section">
                <h3>Mettre à jour votre profil</h3>

                <!-- Menu déroulant avec deux sections (photo et description) -->
                <div class="accordion" id="profileAccordion">
                    <!-- Section "Changer la photo" -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="photoHeading">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#photoCollapse" aria-expanded="true" aria-controls="photoCollapse">
                                Changer la photo
                            </button>
                        </h2>
                        <div id="photoCollapse" class="accordion-collapse collapse show" aria-labelledby="photoHeading" data-bs-parent="#profileAccordion">
                            <div class="accordion-body">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_row(form.photo, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section "Mettre à jour la description" -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="descriptionHeading">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#descriptionCollapse" aria-expanded="false" aria-controls="descriptionCollapse">
                                Mettre à jour la description
                            </button>
                        </h2>
                        <div id="descriptionCollapse" class="accordion-collapse collapse" aria-labelledby="descriptionHeading" data-bs-parent="#profileAccordion">
                            <div class="accordion-body">
                                <div class="form-group">
                                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            
                                {{ form_end(form) }}
                            </div>
                            
                        </div>
                            <button type="submit" class="btn btn-primary mt-3">Mettre à jour</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carte de profil à droite -->
        <div class="col-12 col-md-6 mb-4" data-aos="fade-up" data-aos-duration="800">
            <div class="profil-card {{ grade|replace({' ': ''}) }}">
                <h3 class="profil-name">{{ prenom }}</h3>
                
                <div class="profil-photo" data-aos="zoom-in" data-aos-duration="800">
                    {% if photoProfil %}
                        <img src="{{ asset(photoProfil) }}" alt="Photo de profil" class="profil-img" />
                    {% else %}
                        <p>Aucune photo de profil</p>
                    {% endif %}
                </div>

                <div class="profil-info" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
                    <div class="profil-grade">
                        {% if grade %}
                            <span class="grade">Grade {{ grade }}</span>
                        {% endif %}
                    </div>

                    {% if description %}
                        <p class="profil-description">{{ description }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
