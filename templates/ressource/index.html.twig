{% extends 'base.html.twig' %}

{% block head %}
<meta charset="UTF-8">
<meta name="description" content="Accédez aux ressources disponibles pour les membres du Judo Club d'Isbergues, classées par grade. Trouvez des vidéos, des articles et d'autres matériels pour améliorer votre pratique du judo.">
<meta name="keywords" content="ressources judo, ressources club judo isbergues, grade judo, vidéos judo, documents judo, formation judo, club judo isbergues">
<meta property="og:type" content="website">
<meta property="og:title" content="Ressources | Judo Club d'Isbergues">
<meta property="og:description" content="Découvrez les ressources pour chaque grade au Judo Club d'Isbergues : vidéos, articles et plus, pour améliorer vos compétences en judo.">
<meta property="og:image" content="{{ asset('asset/img/logo.jpg') }}">
<meta property="og:url" content="{{ app.request.uri }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="Ressources | Judo Club d'Isbergues">
<meta name="twitter:description" content="Explorez les ressources par grade pour les membres du Judo Club d'Isbergues, incluant vidéos et autres contenus utiles pour progresser en judo.">
<meta name="twitter:image" content="{{ asset('asset/img/logo.jpg') }}">
{% endblock %}

{% block title %}Ressources | Judo Club D'Isbergues{% endblock %}

{% block body %}
    <h1 class="page-title text-center mb-5" data-aos="fade-up" data-aos-duration="1000">Ressources</h1>

    {% if ressourcesParGrade is empty %}
        <p class="text-center" data-aos="fade-up" data-aos-duration="1000">Aucune ressource disponible.</p>
    {% else %}
        <div class="container">
            <div class="row">
                {% for grade, ressources in ressourcesParGrade %}
                    <div class="col-12" data-aos="fade-up" data-aos-duration="1000">
                        <h2 class="grade-title text-center mb-4" data-aos="fade-up" data-aos-duration="1000">{{ grade }}</h2>

                        <div class="row">
                            {% for ressource in ressources %}
                                <div class="col-md-4 mb-4" data-aos="zoom-in" data-aos-duration="800">
                                    <div class="card shadow-sm">
                                        {% if ressource.image %}
                                            <img src="{{ asset('asset/img/ressource/' ~ ressource.image) }}" alt="{{ ressource.titre }}" class="card-img-top" data-aos="fade-up" data-aos-duration="1000"/>
                                        {% endif %}
                                        <div class="card-body">
                                            <h5 class="card-title" data-aos="fade-up" data-aos-duration="1000">{{ ressource.titre }}</h5>
                                            <p class="card-text" data-aos="fade-up" data-aos-duration="1000">{{ ressource.text }}</p>
                                            <p class="card-text" data-aos="fade-up" data-aos-duration="1000"><strong>Grade:</strong> {{ ressource.grade }}</p>
                                            <p class="card-text" data-aos="fade-up" data-aos-duration="1000"><strong>Date:</strong> {{ ressource.datetime|date('d/m/Y H:i') }}</p>
                                            {% if ressource.lien %}
                                                <a href="{{ ressource.lien }}" target="_blank" class="btn btn-primary" data-aos="fade-up" data-aos-duration="1000">Voir la vidéo</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}
