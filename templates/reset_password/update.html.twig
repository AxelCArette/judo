{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success mb-4" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Réinitialisez votre mot de passe</h2>
            
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group mb-4">
                            {{ form_label(form.new_password.first, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.new_password.first, {'attr': {'class': 'form-control', 'placeholder': 'Votre nouveau mot de passe'}}) }}
                            <small class="form-text text-muted">Votre mot de passe doit comporter au moins 8 caractères.</small>
                        </div>
                        
                        <div class="form-group mb-4">
                            {{ form_label(form.new_password.second, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.new_password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre mot de passe'}}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-info btn-block'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
