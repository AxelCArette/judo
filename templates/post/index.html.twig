{% extends 'base.html.twig' %}

{% block title %}Liste des Publications{% endblock %}

{% block body %}
    <h1>Liste des Publications</h1>

    {% for post in posts %}
        <div class="post-card">
            <h3>{{ post.title }}</h3>
            <p><strong>Auteur :</strong> {{ post.membre.prenom }} {{ post.membre.nom }}</p>
            <p><strong>Publi√© le :</strong> {{ post.createdAt|date('d/m/Y H:i') }}</p>
            <p>{{ post.content }}</p>
        </div>
    {% else %}
        <p>Aucune publication disponible.</p>
    {% endfor %}
{% endblock %}
